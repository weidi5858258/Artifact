<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/linearlayout">
    <TextView 
        android:background="#8866ff00"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:text="备份或者恢复我的信息"/>
	
	<LinearLayout
	    android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal">
		<Button
		    android:id="@+id/bt_backup_callrecords"
		    android:layout_width="0dip"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	   		android:text="备份通话记录"/>
		<Button
		    android:id="@+id/bt_restore_callrecords"
		    android:layout_width="0dip"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	   		android:text="恢复通话记录"/>
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal">
		<Button
		    android:id="@+id/bt_backup_smss"
		    android:layout_width="0dip"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	   		android:text="备份短信"/>
		<Button
		    android:id="@+id/bt_restore_smss"
		    android:layout_width="0dip"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	   		android:text="恢复短信"/>
	</LinearLayout>
	
	<Button
		    android:id="@+id/bt_cancel"
		    android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:text="取消"/>
</LinearLayout>

	<RelativeLayout 
	    android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_gravity="center">
		<ProgressBar 
		    android:id="@+id/pb_backup_restore"
		    android:visibility="invisible"
		    android:layout_centerInParent="true"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"/>
	    <TextView 
	        android:id="@+id/tv_backup_restore"
	        android:layout_below="@id/pb_backup_restore"
	        android:visibility="invisible"
	        android:layout_marginTop="30dip"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:textColor="#FF0000"
	   		android:text="正在备份...马上就好"/>
	</RelativeLayout>

</FrameLayout>
