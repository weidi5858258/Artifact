<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout 
        android:id="@+id/blacklist_content"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
	    <TextView 
	        android:id="@+id/blacklist_name"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:text="电话拦截+短信拦截"/>
	    <TextView 
	        android:id="@+id/blacklist_number"
	        android:layout_marginLeft="40dip"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	        android:textColor="#D20000"
	        android:textSize="25sp"
	        android:text="电话拦截+短信拦截"/>
	    <TextView 
	        android:id="@+id/blacklist_mode"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	        android:textColor="#0196AF"
	        android:text="电话拦截+短信拦截"/>
	</LinearLayout>
    
	<ImageView 
	    android:id="@+id/blacklist_delete"
	    android:src="@drawable/delete_selector"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="5dip"
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"/>
</RelativeLayout>
