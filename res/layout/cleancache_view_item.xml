<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip">
    <ImageView
        android:id="@+id/iv_cleancache_icon"
        android:src="@drawable/gee"
        android:layout_marginLeft="5dip"
        android:layout_width="55dip"
   		android:layout_height="55dip"/>
    <LinearLayout 
        android:layout_toRightOf="@id/iv_cleancache_icon"
        android:paddingLeft="5dip"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:orientation="vertical">
	    <TextView 
	        android:id="@+id/tv_cleancache_appname"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:textColor="#E3B87D"
	        android:text="金山手机卫士"/>
	    <TextView 
	        android:id="@+id/tv_cleancache_cache"
	        android:layout_marginTop="10dip"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:textColor="#88000000"
	        android:text="Cache created：100MB"/>
	</LinearLayout>
	    
    <ImageView 
	    android:id="@+id/iv_cleancache_clean"
	    android:src="@drawable/delete"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="5dip"
	    android:layout_width="40dip"
	   	android:layout_height="40dip"/>
</RelativeLayout>
