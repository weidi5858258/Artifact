<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<TextView 
	    android:id="@+id/tv_security_title"
	    android:gravity="center"
    	android:background="#8866ff00"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#ff0000"
    	android:textSize="40sp"
    	android:text="2.手机卡绑定"/>
		<TextView 
		    android:id="@+id/activity_security_setup2_info"
		    android:layout_below="@id/tv_security_title"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="12dip"
	    	android:textSize="30sp"
		    android:text="通过绑定SIM卡：\n下次重启手机如果发现SIM卡变化\n就会发送报警短信"/>
		<com.weidi.artifact.ui.CheckBoxItemBindSIM
		    android:id="@+id/activity_security_setup2_bindsim"
		    android:layout_below="@id/activity_security_setup2_info"
		    android:layout_marginTop="20dip"
		    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"/>
	<LinearLayout 
	    android:id="@+id/ll_security_circle"
	    android:layout_below="@id/activity_security_setup2_bindsim"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:orientation="horizontal">
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_invisible"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_online"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_invisible"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_invisible"/>
	</LinearLayout>
	<RelativeLayout
	    android:layout_below="@id/ll_security_circle"
	    android:layout_width="match_parent"
		android:layout_height="match_parent">
		<ImageView 
		    android:layout_width="100dip"
			android:layout_height="100dip"
			android:layout_centerInParent="true"
			android:src="@drawable/bind"/>
		<Button 
		    android:id="@+id/setup2_previous"
		    style="@style/button_previous"/>
		<Button 
		    android:id="@+id/setup2_next"
		    style="@style/button_next"/>
	</RelativeLayout>
</RelativeLayout>
