<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:background="#8866ff00"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:text="高级工具"/>
    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	<LinearLayout 
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical">
		    <TextView 
		        android:id="@+id/advancedtools_tv_backuporrestoreinfos"
		        android:background="@drawable/textbutton"
		        android:padding="10dip"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:drawableLeft="@android:drawable/ic_menu_call"
		   	    android:textSize="25sp"
		   	    android:text="备份或者恢复我的信息"/>
		    <View 
			    android:background="#000000"
			    android:layout_width="match_parent"
		        android:layout_height="0.2dip"/>
		    <TextView 
		        android:id="@+id/advancedtools_tv_phonenumberaddressquery"
		        android:background="@drawable/textbutton"
		        android:padding="10dip"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:drawableLeft="@android:drawable/ic_menu_call"
		   	    android:textSize="25sp"
		   	    android:text="手机号码归属地查询"/>
		    <View 
			    android:background="#000000"
			    android:layout_width="match_parent"
		        android:layout_height="0.2dip"/>
		    <TextView 
		        android:id="@+id/advancedtools_tv_weather"
		        android:background="@drawable/textbutton"
		        android:padding="10dip"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:drawableLeft="@android:drawable/ic_menu_call"
		   	    android:textSize="25sp"
		   	    android:text="天气查询"/>
		    <View 
			    android:background="#000000"
			    android:layout_width="match_parent"
		        android:layout_height="0.2dip"/>
		    <TextView 
		        android:background="@drawable/textbutton"
		        android:padding="10dip"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:drawableLeft="@android:drawable/ic_menu_call"
		   	    android:textSize="25sp"
		   	    android:text="身份证查询"/>
		    <View 
			    android:background="#000000"
			    android:layout_width="match_parent"
		        android:layout_height="0.2dip"/>
		    <TextView 
		        android:background="@drawable/textbutton"
		        android:padding="10dip"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:drawableLeft="@android:drawable/ic_menu_call"
		   	    android:textSize="25sp"
		   	    android:text="全国车辆交通违章查询接口"/>
		    <View 
			    android:background="#000000"
			    android:layout_width="match_parent"
		        android:layout_height="0.2dip"/>
    	</LinearLayout>
    </ScrollView>
    
</LinearLayout>
