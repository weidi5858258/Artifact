<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<TextView 
	    android:id="@+id/tv_security_title"
	    android:gravity="center"
    	android:background="#8866ff00"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#ff0000"
    	android:textSize="40sp"
    	android:text="4.恭喜您，设置完成 "/>
	<com.weidi.artifact.ui.CheckBoxItemAntitheftProtection
	    android:id="@+id/tv_security_antitheftprotection"
	    android:layout_below="@id/tv_security_title"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
	<LinearLayout 
	    android:id="@+id/ll_security_circle"
	    android:layout_below="@id/tv_security_antitheftprotection"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:orientation="horizontal">
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_invisible"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_invisible"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_invisible"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/presence_online"/>
	</LinearLayout>
	<RelativeLayout
	    android:layout_below="@id/ll_security_circle"
	    android:layout_width="match_parent"
		android:layout_height="match_parent">
		<ImageView 
		    android:layout_width="100dip"
			android:layout_height="100dip"
			android:layout_centerInParent="true"
			android:src="@drawable/mm"/>
		<Button 
		    android:id="@+id/setup4_previous"
		    style="@style/button_previous"/>
		<Button 
		    android:id="@+id/setup4_success"
		    style="@style/button_next"
		    android:layout_width="145dip"
		    android:text="设置完成"/>
	</RelativeLayout>
</RelativeLayout>
