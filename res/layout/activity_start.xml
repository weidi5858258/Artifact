<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiankong" >
    <!-- android:background="@drawable/luncher_bg" -->
    <ProgressBar 
        android:id="@+id/pb_start_progress"
        android:layout_centerInParent="true"
        android:layout_width="90dip"
   	    android:layout_height="90dip"/>
	<TextView 
	    android:id="@+id/tv_start_version"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/pb_start_progress"
	    android:layout_marginTop="15dip"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="#ff0000"
    	android:textSize="30sp"/>
	<TextView 
	    android:id="@+id/tv_start_download"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentBottom="true"
	    android:visibility="gone"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="#ff0000"
    	android:textSize="30sp"/>
</RelativeLayout>
